{% extends "base.html.twig" %}

{% block title %}
	Gestion Administrative | Le Quai Antique
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="produit.css">
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1 class="main-title-admin-page">Gestion Administrative</h1>

		<h2 class="mt-5">Ajouter une nouvelle règle au Restaurant</h2>
		<div class="mt-5">
			{{ form_start(restaurantRule_form, {"attr": {"novalidate": "novalidate"}}) }}
				{{ form_row(restaurantRule_form.closureDay) }}
				{{ form_row(restaurantRule_form.runMidi) }}
				{{ form_row(restaurantRule_form.runSoir) }}
				{{ form_row(restaurantRule_form.bookingLimit) }}
				<button type="submit" class="btn btn-success">Confirmer ?</button>
			{{ form_end(restaurantRule_form)}}
		</div>
		<h2 class="mt-5">Règle du Restaurant</h2>
		<div class="mt-5">
			{% for rule in rules %}
				<p>{{ rule.closureDay }}</p>
				<p>{{ rule.runMidi }}</p>
				<p>{{ rule.runSoir }}</p>
				<p>{{ rule.bookingLimit }}</p>
			{% endfor %}
		</div>
		<h2 class="mt-5">Les Réservations</h2>
		<div>

			<p class="mt-5">Réservation du MIDI</p>
			{% for book in books %}
				{% if book.hourSelectedDay %}
					<p>{{ book.alias }}</p>
					<p>{{ book.phoneNumber }}</p>
					<p>{{ book.preferedGroupNumber}}</p>
					<p>{{ book.date | date("d/m/Y") }}</p>
					<p>{{ book.hourSelectedDay }}</p>
					<p>{{ book.allergies }}</p>
					<a href="{{ path('delete-booking', {'id': book.id}) }}" class="btn btn-danger">Supprimer</a>
				{% endif %}
			{% endfor %}

			<p>Réservation du SOIR</p>
			{% for book in books %}
				{% if book.hourSelectedNight %}
					<p>{{ book.alias }}</p>
					<p>{{ book.phoneNumber }}</p>
					<p>{{ book.preferedGroupNumber}}</p>
					<p>{{ book.date | date("d/m/Y") }}</p>
					<p>{{ book.hourSelectedNight }}</p>
					<p>{{ book.allergies }}</p>
					<a href="{{ path('delete-booking', {'id': book.id}) }}" class="btn btn-danger">Supprimer</a>
				{% endif %}
			{% endfor %}
		</div>
	</div>
{% endblock %}
