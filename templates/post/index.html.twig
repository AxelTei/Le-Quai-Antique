{% extends 'base.html.twig' %}

{% block title %}Accueil | Le Quai Antique
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-around flex-wrap">
		{% for post in posts %}
			<div class="card mt-5" style="width: 18rem;">
				{% if post.title %}
					{# Mettre le titre en apparence avec passage de la souris sur une photo #}
					<h5 class="card-title">{{ post.title }}</h5>
				{% endif %}
				{% if post.image %}
					<img src={{ post.image }} class="card-img-top" alt={{ post.title }}>
				{% endif %}
				<div class="card-body">
					<p class="card-text">{{ post.content }}</p>
					{% if is_granted('ROLE_ADMIN') %}
						<a href="{{ path('delete-post', {'id': post.id}) }}" class="btn btn-danger">Supprimer</a>
						<a href="{{ path('edit-post', {'id': post.id}) }}" class="btn btn-warning">Modifier</a>
						<a href="{{ path('copy-post', {'id': post.id}) }}" class="btn btn-info">Copier</a>
					{% endif %}
				</div>
			</div>
		{% endfor %}
	</div>
	<div class="d-flex justify-content-center flex-wrap mt-5">
		<a href="#" class="btn btn-danger">Réserver</a>
	</div>

	<div style="height: 800px;">
	</div>

	<!--Footer Section-->

	<footer class="container-fluid footer mt-5">
		<div class="row">
			<div class="col-sm-3 mx-auto text-center footer-main-article">
				<h5 class="footer-main-title">Chef Arnaud Michant</h5>
			</div>
			<div class="col-sm-3 mx-auto text-center footer-main-article">
				<h5 class="footer-main-title">Le Quai Antique</h5>
			</div>
			<div class="col-sm-3 mx-auto text-center footer-hours">
				<h5 class="footer-title-hours">Nos Horaires d'ouverture</h5>
				<div class="row">
					<div class="col-6">
						<p>yo</p>
					</div>
					<div class="col-6">
						<p>yo</p><br>
						<p class="mt-0">yo</p>
					</div>
				</div>
			</div>
			<div class="col-sm-3 mx-auto text-center footer-article">
				<h5 class="footer-title">208, boulevard de la Savoie, 73000 Chambéry</h5>
			</div>
		</div>
	</footer>
{% endblock %}
