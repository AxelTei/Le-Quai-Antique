<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{# Voir live 3 pour les styles parents et specifique à la page (-20:00) #}
			{{ encore_entry_link_tags('app') }}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
			<link rel="stylesheet" href="{{ asset('style.css') }}"/>
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
		{% endblock %}
	</head>
	<body>
		{% block header %}
			<nav class="navbar navbar-expand-lg" style="background-color: #927F42;">
				<div class="container-fluid">
					<a class="navbar-brand" href="/" style="color: white;">Le Quai Antique</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarSupportedContent">
						<ul class="navbar-nav me-auto mb-2 mb-lg-0">
							<li class="nav-item">
								<a class="nav-link" aria-current="page" href="/">Accueil</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="/carte">Carte</a>
							</li>
							<li class="nav-item">
								<a class="nav-link">Livre d'or</a>
							</li>
							<li class="nav-item">
								<a class="nav-link">Contact</a>
							</li>
							{% if is_granted('ROLE_ADMIN') %}
								<li class="nav-item dropdown">
									<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
										Gestion Administrative
									</a>
									<ul class="dropdown-menu">
										<li>
											<a class="dropdown-item" href="/post/new">Gestion Plats Page d'Accueil</a>
										</li>
										<li>
											<a class="dropdown-item" href="#">Gestion des Menus</a>
										</li>
										<li>
											<a class="dropdown-item" href="/carte/new">Gestion de la Carte</a>
										</li>
										<li>
											<a class="dropdown-item" href="#">Gestion des horaires</a>
										</li>
									</ul>
								</li>
							{% elseif is_granted('ROLE_USER') %}
								<li class="nav-item">
									<a class="nav-link" href="#">Gestion de compte</a>
								</li>
							{% endif %}
						</ul>
						{% if app.user %}
							<a href="/logout">
								<button class="btn btn-outline-success" type="submit" style="background-color: red; color: white;">Se déconnecter</button>
							</a>
						{% else %}
							<a href="/login">
								<button class="btn btn-outline-success" type="submit" style="background-color: red; color: white;">Se connecter</button>
							</a>
						{% endif %}
					</div>
				</div>
			</nav>
		{% endblock %}
		{% block body %}{% endblock %}
	</body>
</html>
